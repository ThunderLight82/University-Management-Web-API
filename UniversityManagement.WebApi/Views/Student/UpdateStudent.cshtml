<div class="container py-1">
    <div class="row justify-content-center">
        <div class="column">
            <form method="post">
                
                <div class="panel-heading">
                    <h3 class="panel-title">Update Student</h3>
                </div>

                <div class="form-student mb-2">
                    <label for="studentId" style="margin-right: 10px; margin-bottom: 5px; margin-top: 10px">
                        <b>Select a student to update a first or last name:</b>
                    </label>

                    <select class="form-control" style="width: 250px;" id="studentId" name="StudentDto.Id" onchange="getStudentBothName()">
                        @if (ViewBag.StudentsList != null)
                        {
                            foreach (var student in ViewBag.StudentsList)
                            {
                                <option value="@student.Id">@($"{student.FirstName} {student.LastName}")</option>
                            }
                        }
                        else
                        {
                            <option value="">No students available</option>
                        }
                    </select>
                </div>

                <div class="form-student">

                    <label for="newChangedFirstName" style="margin-right: 10px; margin-bottom: 5px;">
                        <b>Enter first name:</b>
                    </label>
                    <input type="text" class="form-control form-control-sm" style="width: 250px" id="newChangedFirstName" name="StudentDto.FirstName" required>

                    <label for="newChangedLastName" style="margin-right: 10px; margin-bottom: 5px;">
                        <b>Enter last name:</b>
                    </label>
                    <input type="text" class="form-control form-control-sm" style="width: 250px" id="newChangedLastName" name="StudentDto.LastName" required>
                </div>

                <button type="submit" class="btn btn-primary btn-sm" style="margin-top: 15px;">Update Student Name</button>

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success" style="margin-top: 15px;">
                        @ViewBag.SuccessMessage
                    </div>
                }

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" style="margin-top: 15px;">
                        @ViewBag.ErrorMessage
                    </div>
                }

            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script src="~/js/Student/EditStudentAutoFillNames.js" asp-append-version="true"></script>