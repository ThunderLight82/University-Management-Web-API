<div class="container py-1">
    <div class="row justify-content-center">
        <div class="column">
            <form method="post">
                
                <div class="panel-heading">
                    <h3 class="panel-title">Delete Group</h3>
                    </div>


                <div class="form-group mb-2">
                    <label for="courseId" style="margin-right: 10px; margin-bottom: 5px; margin-top: 10px">
                        <b>Select a course to delete group with:</b>
                    </label>

                    <select class="form-control" style="width: 250px;" id="courseId" name="courseId" onchange="getGroups()">
                        @if (ViewBag.CourseList != null)
                        {
                            foreach (var course in ViewBag.CourseList)
                            {
                                <option value="@course.Id">@course.Name</option>
                            }
                        }
                        else
                        {
                            <option value="">No courses available</option>
                        }
                    </select>
                </div>

                <div class="form-group mb-2">
                    <label for="groupId" style="margin-right: 10px; margin-bottom: 5px;">
                        <b>Select a group:</b>
                    </label>
                    <select class="form-control" style="width: 250px;" id="groupId" name="GroupDto.Id"></select>
                </div>

                <button type="submit" class="btn btn-primary btn-sm" style="margin-top: 15px;">Delete Group</button>

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success" style="margin-top: 15px;">
                        @ViewBag.SuccessMessage
                    </div>
                }

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" style="margin-top: 15px;">
                        @ViewBag.ErrorMessage
                    </div>
                }

            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script src="~/js/Group/DeleteGroupGetGroupForCourse.js" asp-append-version="true"></script>